<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ahutoj.mapper.ahutoj.UserMapper">
    <select id="getUserInfoByUID" resultType="com.ahutoj.bean.User">
        select UID,
               HeadUrl,
               UserName,
               School,
               Classes,
               Major,
               Adept,
               Email
        from User
        where UID = #{UID};
    </select>


    <update id="changeUserInfo">
        update Submit
        set lang = 1
        where sid = 1000;
    </update>
</mapper>